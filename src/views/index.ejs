<%- include("./includes/head") %>
<%- include("./includes/nav") %>
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-4">
            <h1 class="text-center">Agenda</h1>
            <p class="text-center lead">Contados abaixo:</p>
            <%- include("./includes/menssages") %>
            <div class="responseive-table">
                <table class="table my-3">
                    <% if(contatos.length !== 0){ %>
                        <% contatos.forEach((contato)=>{ %>
                            <tr>
                                <td><%= contato.nome %></td>
                                <td><%= contato.sobrenome %></td>
                                <td><%= contato.email %></td>
                                <td><%= contato.telefone %></td>
                                <td><a href="/contato/index/<%= contato._id %>">Editar</a></td>
                                <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
                            </tr>
                        <% }) %>
                    <% }else{ %>
                        <tr>
                            <td>exemplo: nome</td>
                            <td>exemplo: sobrenome</td>
                            <td>exemplo: email</td>
                            <td>exemplo: telefone</td>
                        </tr>
                    <% } %>
                </table>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
